<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFFDE"
    android:onClick="recuperar"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblID"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="82dp"
        android:background="#DDFFBC"
        android:text="Ingrese el Journal ID:"
        android:textColor="#111215"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/txtJournalID"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="34dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="34sp" />

    <Button
        android:id="@+id/btRetrofit"
        android:layout_width="144dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="136dp"
        android:backgroundTint="#52734D"
        android:onClick="btRetrofit"
        android:text="RETROFIT"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btVolley"
        android:layout_width="140dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="57dp"
        android:backgroundTint="#52734D"
        android:onClick="recuperar"
        android:text="VOLLEY"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        android:background="#91C788"
        android:text="Consumir un WebService de la Plataforma OJS de la UTEQ"
        android:textAlignment="center"
        android:textColor="#101010"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txtListado"
        android:layout_width="384dp"
        android:layout_height="314dp"
        android:layout_below="@+id/btRetrofit"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="58dp"
        android:layout_marginBottom="37dp"
        android:background="#FEFFDE"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="209dp"
        android:layout_marginEnd="0dp"
        android:background="#91C788"
        android:text="Resultado Revista"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="20sp" />

</RelativeLayout>